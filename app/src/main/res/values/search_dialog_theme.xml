<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SearchDialogTheme" parent="Base.Theme.Ecommerce">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowAnimationStyle">@style/SearchDialogAnimations</item>
    </style>

    <style name="SearchDialogAnimations" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/nav_default_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/nav_default_exit_anim</item>
    </style>
</resources>