<resources>

    <style name="Base.Theme.Ecommerce" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="fontFamily">@font/poppinsregular</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="android:windowBackground">?attr/colorSurface</item>

    </style>

    <style name="Theme.MyApp.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/splashscreen</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.Ecommerce</item>
    </style>

    <style name="Theme_Ecommerce" parent="Base.Theme.Ecommerce">
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:includeFontPadding">false</item>
    </style>


</resources>
